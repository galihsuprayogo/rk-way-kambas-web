{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.json"]
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "semi": ["off", "always"],
    "quotes": ["off", "double"],
    "@typescript-eslint/explicit-function-return-type": "off",
    "react/display-name": "off"
  }
}
